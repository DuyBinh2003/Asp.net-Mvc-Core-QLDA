<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Edit User</h5>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BookId" />

                <div class="form-group row">
                    <label asp-for="Name" class="col-3 col-lg-2 col-form-label text-left">Fullname</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="Name" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-3 col-lg-2 col-form-label text-left">Price</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="Price" type="email" value=@Model.Price required="" data-parsley-type="email" class="form-control readonly" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ImgPath" class="col-3 col-lg-2 col-form-label text-left">ImgPath</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="ImgPath" type="text" value=@Model.ImgPath required="" class="form-control readonly" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-3 col-lg-2 col-form-label text-left">Description</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="Description" type="text" value=@Model.Description class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="AuthorId" class="col-3 col-lg-2 col-form-label text-left">AuthorId</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="AuthorId" type="text" value=@Model.AuthorId class="form-control readonly" readonly tabindex="-1">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CategoryId" class="col-3 col-lg-2 col-form-label text-left">CategoryId</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="CategoryId" type="text" value=@Model.CategoryId class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="BookPath" class="col-3 col-lg-2 col-form-label text-left">BookPath</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="BookPath" type="text" value=@Model.BookPath class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Isbn" class="col-3 col-lg-2 col-form-label text-left">Isbn</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="Isbn" type="text" value=@Model.Isbn class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Status" class="col-3 col-lg-2 col-form-label text-left">Status</label>
                    <div class="col-9 col-lg-10">
                        <input asp-for="Status" type="text" value=@Model.Status class="form-control">
                    </div>
                </div>
                <div class="row pt-2 pt-sm-5 mt-1">
                    <div class="col-sm-6 pb-2 pb-sm-4 pb-lg-0 pr-0">
                    </div>
                    <div class="col-sm-6 pl-0">
                        <p class="text-right">
                            <button type="submit" class="btn btn-space btn-succees">Confirm</button>
                            <a class="btn btn-space btn-secondary" asp-action="Index">Back to List</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

