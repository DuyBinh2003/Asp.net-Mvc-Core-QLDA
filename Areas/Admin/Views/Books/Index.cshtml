@model IEnumerable<DoAn.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 col-lg-6 col-md-12 col-sm-12 col-12">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Quản lý Sách</h3>
            <a asp-action="Create" class="btn btn-primary btn-sm">Create</a>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Book ID</th>
                        <td scope="col" class="text-center">Product</td>
                        <th scope="col" class="text-center">Name</th>
                        <th scope="col" class="text-center">Author</th>
                        <th scope="col" class="text-center">Description</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var book in Model)
                        {
                            <tr>
                                <td scope="col" class="text-center">@book.BookId</td>
                                <th scope="col" class="text-center">
                                    <a asp-controller="Books" asp-action="Details" asp-route-id=@book.CategoryId>
                                        <img src=@book.ImgPath alt="" />
                                    </a>
                                </th>
                                <td scope="col" class="text-center">@book.Name</td>
                                <th scope="col" class="text-center">
                                    <a asp-controller="Authors" asp-action="Details" asp-route-id=@book.AuthorId>
                                        @book.Author.Name
                                    </a>
                                </th>
                                <td scope="col" class="text-center">@book.Description</td>
                                <td scope="col" class="text-center">
                                    <a class="btn btn-success btn-tone m-r-5" asp-action="Details" asp-route-id=@book.BookId>View</a>
                                    <a class="btn btn-primary btn-tone m-r-5" asp-action="Edit" asp-route-id=@book.BookId>Edit</a>
                                    <a class="btn btn-danger btn-tone m-r-5" asp-action="Delete" asp-route-id=@book.BookId>Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
