@model DoAn.Models.Book

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h3 class="card-header">Are you sure you want to delete this book?</h3>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>
                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Model.Price</dd>
                <dt class="col-sm-4">ImgPath</dt>
                <dd class="col-sm-8">@Model.ImgPath</dd>
                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>
                <dt class="col-sm-4">AuthorId</dt>
                <dd class="col-sm-8">@Model.AuthorId</dd>
                <dt class="col-sm-4">CategoryId</dt>
                <dd class="col-sm-8">@Model.CategoryId</dd>
                <dt class="col-sm-4">BookPath</dt>
                <dd class="col-sm-8">@Model.BookPath</dd>
                <dt class="col-sm-4">Isbn</dt>
                <dd class="col-sm-8">@Model.Isbn</dd>
                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@Model.Status</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="BookId" />
                <button type="submit" onclick="return confirm('Are you sure you want to delete this book?')" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
