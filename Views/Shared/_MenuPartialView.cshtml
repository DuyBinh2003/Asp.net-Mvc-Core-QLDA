@model List<Book>
@{
    // Tạo một HashSet để lưu trữ các giá trị Category.Name duy nhất
    var uniqueCategories = new HashSet<string>();

    // Lặp qua danh sách sách để thêm các giá trị Category.Name vào tập hợp uniqueCategories
    foreach (var book in Model)
    {
        uniqueCategories.Add(book.Category.Name);
    }
    int counter = 0;
}
<head>
    <!-- Thêm liên kết CDN của Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our Books
            </h2>
        </div>
        <ul class="filters_menu">
            <li class="active" data-filter="*">All</li>
            @foreach (var category in uniqueCategories)
            {
                <li data-filter=".@category">@category</li>
            }
        </ul>
        <form>
            <div class="search-box">
                <a class="search-icon pl-2">
                    <i class="fa-solid fa-magnifying-glass "></i>
                </a>
                <input type="text" class="searchInput pl-3" placeholder="Search">
            </div>
        </form>
        <div class="filters-content">
            <div class="row grid">
                @foreach (var book in Model)
                {
                    <div class="col-sm-6 col-lg-4 all @book.Category.Name " data-book-name="@book.Name">
                        <div>
                            <div class="box">
                                <div class="img-box">
                                    <img src="@book.ImgPath" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>@book.Name</h5>
                                    <p>@book.Description</p>
                                    <div class="options">
                                        <h6>@book.Price</h6>
                                        <a asp-controller="product" asp-action="detail" asp-route-id="@book.BookId">
                                            <i class="fas fa-shopping-cart text-white"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="btn-box">
        <a id="viewMoreButton">
            View More
        </a>
    </div>
</section>





