@{
    var book = ViewBag.Book as Book;
    var user = ViewBag.User as User;
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="path/to/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

</head>

<section class="book_section layout_padding">
    <div class="container">
        
        <div class="row">
            <div class="offset-1 col-md-5">
                <h2 class="w-100 text-center mb-4">
                    Order Books
                </h2>
                <div class="form_container">
                    <form method="post" action="@Url.Action("BuyProduct", "Order")">
                        <div>
                            <input type="text" class="form-control mb-4" placeholder="Name" value="@user.Name" />
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <input type="hidden" name="bookId" value="@book.BookId" />
                            <input type="hidden" name="price" value="@book.Price" />
                            <input type="hidden" name="quantity" value="@ViewBag.Quantity" />
                        </div>
                        <div>
                            <input type="text" name="sdt" class="form-control mb-4" placeholder="Phone Number" value="@user.Sdt" />
                        </div>
                        <div>
                            <input type="text" name="address" class="form-control mb-4" placeholder="Adress" value="@user.Address" />
                        </div>
                        <div>
                            <input type="text" name="note" class="form-control mb-4 width : 300px" placeholder="Note" />
                        </div>
                        <div class="btn_box text-center">
                            <button type="submit" class="px-4">
                                Order now @(book.Price * @ViewBag.Quantity)
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="offset-1 col-md-5">
                <div class="d-flex flex-column align-items-center">
                    <h2>@book.Name</h2>
                    <img class="order-img my-2" src="@book.ImgPath" />
                    <p>Quantity: @ViewBag.Quantity</p>
                </div>
            </div>
        </div>
    </div>
</section>

