@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Cart>

<div class="cart pt-5 pb-5">
    <div class="row">
        <div class="col-md-10 offset-1">
            <h1 class="text-center pb-2">Giỏ hàng</h1>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product</th>
                        <th>Image</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cart in Model)
                    {
                        <tr>
                            <td>#</td>
                            <td>@cart.Book.Name</td>
                            <td>
                                <img src="@cart.Book.ImgPath" />
                            </td>
                            <td>@cart.Quantity</td>
                            <td>@cart.Book.Price</td>
                            <td>@(@cart.Book.Price * @cart.Quantity)</td>
                            <td>
                                <a href="">
                                    <i class="fa fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>


